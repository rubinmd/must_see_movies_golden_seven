
  <div class="page-header">
    <h1>Movies</h1>
  </div>

<a type="button" href="/add_movie" class="btn btn-primary">Add a new movie</a>
  <table class="table table-hover">
    <thead>
      <tr>
        <td><strong>Image</strong></td>
        <td><strong>Title</strong></td>
        <td><strong>Year</strong></td>
        <td><strong>Duration</strong></td>
        <td><strong>Description</strong></td>
        <td><strong>Director ID</strong></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
      <tr>
        <td><img width= "100" src="<%= movie.image_url %>"></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.description %></td>
        <td></td>
        <td><a href="/view_movie/<%= movie.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a></td>
        <td><a href="/edit_movie/<%= movie.id %>" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i></a></td>
        <td><a href="/delete_movie/<%= movie.id %>" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>







