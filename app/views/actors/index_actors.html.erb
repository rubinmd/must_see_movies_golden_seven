
  <div class="page-header">
    <h1>Actors</h1>
  </div>

<a type="button" href="/add_actor" class="btn btn-primary">Add a new actor</a>
  <table class="table table-hover">
    <thead>
      <tr>
        <td><strong>Image</strong></td>
        <td><strong>DOB</strong></td>
        <td><strong>Name</strong></td>
        <td><strong>Bio</strong></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @actors.each do |actor| %>
      <tr>
        <td><img width= "100" src="<%= actor.image_url %>"></td>
        <td><%= actor.dob %></td>
        <td><%= actor.name %></td>
        <td>
        <% if actor.bio.to_s.length>27 %>
          <%= actor.bio.to_s[0..26] + "..." %>
          <% else %>
          <%= actor.bio%>
        <% end %>
        </td>
        <td><a href="/view_actor/<%= actor.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a></td>
        <td><a href="/edit_actor/<%= actor.id %>" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i></a></td>
        <td><a href="/delete_actor/<%= actor.id %>" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>







