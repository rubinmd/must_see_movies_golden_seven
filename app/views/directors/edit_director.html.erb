  <div class="page-header">
    <h1>Edit director</h1>
  </div>

  <form action="/update_director/<%= @director.id %>" class="form-horizontal">
    <div class="form-group">
      <label class="control-label col-sm-2" for="dob">DOB:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="dob" name="dob" value=<%= @director.dob %>>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" value=<%= @director.name %>>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="bio">Bio</label>
      <div class="col-sm-10">
        <textarea type="text" class="form-control" id="bio" name="bio"><%= @director.bio %></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="img_url">Image URL</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="img_url" name="img_url" value=<%= @director.image_url %>>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <button type="submit" class="btn btn-primary">Edit director</button>
      </div>
    </div>
  </form>
